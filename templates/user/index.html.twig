{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="my-5 text-center text-uppercase">annuaire des employés</h1>

		{# <div class="count">
			<p class="fs-5 fw-bold">Total :
				{{user.getTotalItemCount}}
				Employés</p>
		</div> #}

		<div class="container">
			<div class="row mb-4">
				{% for user in users %}
					<div class="card mx-3 my-3 shadow p-3 mb-5 bg-body rounded" style="width: 25rem;">
						<img src="{{asset ('/uploads/users/' ~ user.photo)}}" height="450" class="card-img-top mt-3" alt="{{user.firstname}}">
						<div class="card-body">
							<h5 class="card-title text-center mb-3"> {{user.firstname}} {{user.lastname}}</h5>
							<ul>
								<li>Email :
									{{user.email}}</li>
								<li>Secteur :
									{{user.sector}}</li>
								<li>Type de contrat :
									{{user.contract}}</li>
							</ul>
						</div>
					</div>
				{% else %}
					<p>Il n'y a aucun employé.</p>
				{% endfor %}
			</div>
		</div>
	{% endblock %}
