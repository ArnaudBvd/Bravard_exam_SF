{% extends 'base.html.twig' %}

{% block title %}New User
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="h3 mb-3 font-weight-normal text-center mt-5 text-uppercase">créer un nouveau compte</h1>
		<div class="mb-4">
			<a href="{{ path ('app_admin') }}" class="text-info fw-bold text-decoration-none fs-5">Retour</a>
		</div>

		{# {{ include('user/_form.html.twig') }} #}
		<div class="container border border-info border-3 rounded py-4 d-flex justify-content-center w-75">
		{{ form_start(form) }}
		<div class="mb-4">
			<label class="text-primary fw-bold w-100">{{  form_row(form.firstname) }}</label><br>
			<label class="text-primary fw-bold w-100">{{ form_row(form.lastname) }}</label>
		</div>

		<div class="mb-4">
			<label class="text-primary fw-bold w-100">{{ form_row(form.email) }}</label><br>
			<label class="text-primary fw-bold w-100">{{ form_row(form.password) }}</label>
			<p class="fw-lighter fst-italic fs-6">* Votre mot de passe doit comporter 8 caractères au minimum, 1 lettre et 1 chiffre</p>
		</div>

		<div class="mb-4">
			<label class="text-primary fw-bold w-100">{{ form_row(form.photo) }}</label>
		</div>

		<div class="mb-4">
			<label class="text-primary fw-bold w-100">{{ form_row(form.sector) }}</label><br>
			<label class="text-primary fw-bold w-100">{{ form_row(form.contract) }}</label><br>
			<label class="text-primary fw-bold w-100">{{ form_row(form.release_date) }}</label>
		</div>

		<div class="d-flex justify-content-center mt-5">
			<button type="submit" class="btn btn-primary">ENREGISTRER LE NOUVEAU COMPTE</button>
		</div>

		{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
