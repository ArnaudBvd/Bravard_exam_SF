{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="h3 mb-3 font-weight-normal text-center mt-5 text-uppercase">PROFIL DE :
			{{user.firstname}}
			{{user.lastname}}</h1>

		<div class="mb-4">
			<a href="{{ path ('app_user_index') }}" class="text-info fw-bold text-decoration-none fs-5">Retour</a>
		</div>

		<div class="d-flex justify-content-center mb-5">
			<div>
				<img src="{{asset ('/uploads/users/' ~ user.photo)}}" class="mt-3 rounded" width="300" height="400" alt="{{user.firstname}}">
			</div>
		</div>

		<table class="table">
			<tbody>

				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Prénom</th>
					<td>{{ user.firstname }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ user.lastname }}</td>
				</tr>				
				<tr>
					<th>Secteur d'activité</th>
					<td>{{ user.sector }}</td>
				</tr>
				<tr>
					<th>Type de contrat</th>
					<td>{{ user.contract }}</td>
				</tr>
				<tr>
					<th>Date de fin de contrat</th>
					<td>{{ user.releaseDate ? user.releaseDate|date('Y-m-d') : '' }}</td>
				</tr>
			</tbody>
		</table>
	</div>

{% endblock %}
